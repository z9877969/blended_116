{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "The amazing products API",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "The amazing products API description\n"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    },
    {
      "url": null
    }
  ],
  "tags": [
    {
      "name": "Products",
      "description": "Products endpoints"
    }
  ],
  "paths": {
    "/products": {
      "get": {
        "tags": [
          "Products"
        ],
        "summary": "Get all products",
        "operationId": "getAllProducts",
        "description": "Get all products",
        "security": [],
        "parameters": [
          {
            "in": "query",
            "name": "category",
            "required": false,
            "description": "A category of finding products",
            "schema": {
              "type": "string",
              "enum": [
                "books",
                "electronics",
                "clothing",
                "other"
              ],
              "example": "other"
            }
          },
          {
            "in": "query",
            "name": "minPrice",
            "required": false,
            "description": "A minamal price of finding products",
            "schema": {
              "type": "number",
              "minimum": 0,
              "maximum": 1000000
            }
          },
          {
            "in": "query",
            "name": "maxPrice",
            "required": false,
            "description": "A maximal price of finding products",
            "schema": {
              "type": "number",
              "minimum": 0,
              "maximum": 1000000
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully registered a user!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/get_products"
                }
              }
            }
          },
          "400": {
            "description": "Bad request | Invalid body",
            "content": {}
          },
          "409": {
            "description": "Conflict | User with email is exist",
            "content": {}
          }
        }
      },
      "post": {
        "tags": [
          "Products"
        ],
        "summary": "Create product",
        "operationId": "createProduct",
        "description": "Create product",
        "security": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/post_product_request"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Successfully registered a user!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/get_products"
                }
              }
            }
          },
          "400": {
            "description": "Bad request | Invalid body",
            "content": {}
          },
          "409": {
            "description": "Conflict | User with email is exist",
            "content": {}
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "get_products": {
        "type": "object",
        "description": "Get all products response",
        "properties": {
          "status": {
            "type": "number",
            "description": "Response status",
            "example": 200
          },
          "message": {
            "type": "string",
            "description": "Response status",
            "example": "Successfully found products!"
          },
          "data": {
            "type": "array",
            "description": "Response data",
            "items": {
              "type": "object",
              "properties": {
                "_id": {
                  "description": "Product ID",
                  "example": "68cd0e4dbe70fdb9a9c2fff6"
                },
                "name": {
                  "description": "Product name",
                  "example": "Smartphone"
                },
                "price": {
                  "type": "number",
                  "description": "Product price",
                  "minimum": 0,
                  "maximum": 1000000,
                  "example": 699.99
                },
                "category": {
                  "type": "string",
                  "description": "Product category",
                  "example": "Other",
                  "enum": [
                    "books",
                    "electronics",
                    "clothing",
                    "other"
                  ]
                },
                "description": {
                  "type": "string",
                  "description": "Product description",
                  "example": "Latest model smartphone with 5G"
                }
              }
            }
          }
        }
      },
      "post_product_request": {
        "type": "object",
        "description": "Creating product schema",
        "required": [
          "name",
          "price"
        ],
        "properties": {
          "name": {
            "$ref": "#/components/examples/products_name"
          },
          "price": {
            "$ref": "#/components/examples/products_price"
          },
          "category": {
            "$ref": "#/components/examples/products_category"
          },
          "description": {
            "$ref": "#/components/examples/products_description"
          }
        }
      }
    },
    "examples": {
      "products_name": {
        "type": "string",
        "description": "Product name",
        "example": "Smartphone",
        "maxLength": 128
      },
      "products_price": {
        "type": "number",
        "description": "Product price",
        "example": 699.99,
        "minimum": 0,
        "maximum": 1000000
      },
      "products_category": {
        "type": "string",
        "description": "Product category",
        "example": "electronics",
        "enum": [
          "books",
          "electronics",
          "clothing",
          "other"
        ]
      },
      "products_description": {
        "type": "string",
        "description": "Product description",
        "example": "Latest model smartphone with 5G",
        "maxLength": 512
      }
    }
  }
}